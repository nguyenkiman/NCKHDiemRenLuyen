@model Models.EF.lop

@{
    /**/

    ViewBag.Title = "Edit";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">CHỈNH SỬA LỚP @Model.maLop</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maLop)

        <div class="form-group col-md-10">
            <label>Tên ngành</label>
            @Html.DropDownList("maNganh", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.maNganh, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-10">
            <label>Trạng thái</label>
            <select name="trangThai" class="form-control">
                @{ if (Model.trangThai == 1)
                    {
                        <option value="1" selected="selected">Hiện</option>
                        <option value="0">Ẩn</option>
                    }
                    else
                    {
                        <option value="1">Hiện</option>
                        <option value="0" selected="selected">Ẩn</option>
                    }
                }

            </select>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cập nhật" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@model Models.EF.lop

@{
    ViewBag.Title = "Create";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm lớp</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container pb-5">
        <form role="form" class="row">
            <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Mã Lớp </label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Nhập mã lớp">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputEmail1">Tên Lớp</label>
                <input type="email" class="form-control" placeholder="Nhập tên lớp">
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Khoa</label>
                <select name="category_product_status" class="form-control input-sm m-bot15">
                    <option value="1">Điện-Điện tử</option>
                    <option value="0">Ẩn</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="exampleInputPassword1">Ngành</label>
                <select name="category_product_status" class="form-control input-sm m-bot15">
                    <option value="1">Công nghệ thông tin</option>
                    <option value="0">Ẩn</option>
                </select>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Thêm</button>

            </div>

        </form>
    </div>
</section>
<!-- /.content -->

@model PagedList.IPagedList<Models.EF.giangVien>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Danh sách giáo viên</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="offset-7 col-md-5 mb-2">
            @using (Html.BeginForm("Index", "giangViens", FormMethod.Get))
            {
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 offset-4">
                            <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="Nhập từ khóa tìm kiếm" class="form-control">
                        </div>
                        <div class="col-md-2">
                            <input type="submit" value="Tìm kiếm" class="btn btn-default" />
                        </div>
                    </div>
                </div>

            }
        </div>

        <div class="col-md-12">
            <table class="table table-striped table-hover text-center">
                <tr>
                    <th>Mã giáo viên</th>
                    <th>Tên Giáo Viên</th>
                    <th>Ngày sinh</th>
                    <th>Số điện thoại</th>
                    <th>Gmail</th>
                    <th>Giới tính</th>
                    <th>Trạng thái</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maGiangVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenGiangVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngaySinh)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.soDienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gmail)
                        </td>
                        @if (item.gioiTinh == 1)
                        {
                            <td>
                                Nam
                            </td>
                        }
                        else
                        {
                            <td>
                                Nữ
                            </td>
                        }
                        @if (item.trangThai == 1)
                        {
                            <td class="text-success">
                                Hiện
                            </td>
                        }
                        else
                        {
                            <td class="text-danger">
                                Ẩn
                            </td>
                        }

                        <td>
                            <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip"
                                    data-placement="top" title="Edit" onclick="window.location.href='@Url.Action("Edit",new { id = item.maGiangVien })'">
                                <i class="fa fa-edit"></i>
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-light btn-sm rounded-0" type="button" data-toggle="tooltip"
                                    data-placement="top" title="Edit" onclick="window.location.href='@Url.Action("Details",new { id = item.maGiangVien })'">
                                <i class="fa fa-info-circle"></i>
                            </button>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-md-12 d-flex justify-content-end">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
        </div>
    </div>

</section>

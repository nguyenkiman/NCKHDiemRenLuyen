@model Models.EF.giangVien

@{
    ViewBag.Title = "Create";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Thêm giáo viên</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container pb-5">
        @using (Html.BeginForm())
        {
            <div class="row">

                @Html.AntiForgeryToken()

                <div class="form-group col-md-6">
                    <label>Mã Giáo Viên</label>
                    @Html.ValidationMessageFor(model => model.maGiangVien, "", new { @class = "text-danger" })
                    <input type="text" class="form-control" name="maGiangVien" placeholder="Nhập mã giáo viên">
                </div>
                <div class="form-group col-md-6">
                    <label>Tên Giáo Viên</label>
                    @Html.ValidationMessageFor(model => model.tenGiangVien, "", new { @class = "text-danger" })
                    <input type="text" class="form-control" name="tenGiangVien" placeholder="Nhập tên giáo viên">
                </div>

                <div class="form-group col-md-6">
                    <label>Mật khẩu</label>
                    @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                    <input type="password" class="form-control" name="matKhau" placeholder="Password">
                </div>
                <div class="form-group col-md-6">
                    <label>Số điện thoại</label>
                    @Html.ValidationMessageFor(model => model.soDienThoai, "", new { @class = "text-danger" })
                    <input type="number" class="form-control" name="soDienThoai" placeholder="Nhập số điện thoại">
                </div>
                <div class="form-group col-md-6">
                    <label>Email</label>
                    @Html.ValidationMessageFor(model => model.gmail, "", new { @class = "text-danger" })
                    <input type="email" class="form-control" name="gmail" placeholder="Nhập email">
                </div>
                <div class="form-group col-md-6">
                    <label>Ngày sinh</label>
                    @Html.ValidationMessageFor(model => model.ngaySinh, "", new { @class = "text-danger" })
                    <input type="date" class="form-control" name="ngaySinh" placeholder="Nhập ngày sinh">
                </div>
                <div class="form-group col-md-6">
                    <label>Giới tính</label>
                    <select name="gioiTinh" class="form-control input-sm m-bot15">
                        <option value="1">Nam</option>
                        <option value="0">Nữ</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Trạng thái</label>
                    <select name="trangThai" class="form-control input-sm m-bot15">
                        <option value="1">Hiện</option>
                        <option value="0">Ẩn</option>
                    </select>
                </div>
                <div class="col-md-12">
                    <button type="submit" value="Create" class="btn btn-primary">Thêm</button>
                </div>


            </div>
        }
    </div>
</section>

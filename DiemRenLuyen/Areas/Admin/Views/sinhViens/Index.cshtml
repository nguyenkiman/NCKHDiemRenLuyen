@model IEnumerable<Models.EF.sinhVien>

@{
    ViewBag.Title = "Index";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Danh sách sinh viên</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard v1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-2">
            <select class="input-sm form-control w-sm inline v-middle" id="cb_khoa">
                <option value="0">Khoa</option>
                <option value="1">Delete selected</option>
                <option value="2">Bulk edit</option>
                <option value="3">Export</option>
            </select>
        </div>
        <div class="col-md-2">
            <select class="input-sm form-control w-sm inline v-middle" id="cb_khoa">
                <option value="0">Ngành</option>
                <option value="1">Delete selected</option>
                <option value="2">Bulk edit</option>
                <option value="3">Export</option>
            </select>
        </div>
        <div class="col-md-2">
            <select class="input-sm form-control w-sm inline v-middle" id="cb_khoa">
                <option value="0">Lớp</option>
                <option value="1">Delete selected</option>
                <option value="2">Bulk edit</option>
                <option value="3">Export</option>
            </select>
        </div>
        <div class="offset-1 col-md-5 mb-2">
            <div class="input-group rounded">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search"
                       aria-describedby="search-addon" />
                <span class="input-group-text border-0" id="search-addon">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </div>

        <div class="col-md-12">
            <table class="table table-striped table-hover text-center">
                <tr>
                    <th>Mã sinh viên</th>
                    <th>Tên sinh viên</th>
                    <th>Lớp</th>
                    <th>Ngày sinh</th>
                    <th>Số điện thoại</th>
                    <th>Gmail</th>
                    <th>Trạng thái</th>
                    <th></th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.maSinhVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tenSinhVien)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.maLop)
                        </td>
                        <td>
                            @{String a = String.Format("{0:dd/MM/yyyy}", item.ngaySinh); }
                            @a
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.soDienThoai)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gmail)
                        </td>
                        @{ if (item.trangThai == 1)
                            {
                                <td class="text-success">Hiện</td>
                            }
                            else
                            {
                                <td class="text-danger">Ẩn</td>
                            }
                        }
                        <td>
                            <a href="@Url.Action("Edit","sinhViens", new { id = item.maSinhVien })"><i class="fa fa-edit"></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete","sinhViens", new { id = item.maSinhVien })"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="col-md-12 d-flex justify-content-end">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

</section>
<!-- /.content -->

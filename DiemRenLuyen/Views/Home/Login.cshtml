@model DiemRenLuyen.Model.LoginModel
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <div id="crumbs" class="wow animate__fadeInUp" data-wow-duration="2s" style="visibility: visible;">
        <ul>
            <li><a href="@Url.Action("Index","Home")" class="breadcrumb">Trang chủ</a></li>
            <li><a href="@Url.Action("Login","Home")" class="breadcrumb">Đăng nhập</a></li>
        </ul>
    </div>

    <div class="login-form ">
        <h1 class="article-title wow animate__fadeInUp" data-wow-duration="2s" itemprop="headline"
            style="text-align: center;text-transform: capitalize;">
            Đăng nhập Hệ thống <br>Quản lý Chấm điểm rèn luyện
        </h1>
        <div id="login-sv" class="login" width="100%" align="center" border="0" cellpadding="0"
             cellspacing="0">

            <div class=" wow animate__fadeInUp" data-wow-duration="2s">
                <div class="bg-module bg-module-top">

                </div>
                @if (TempData["AlertMessage"] != null)
                {
                    <div id="AlertBox" class="alert @TempData["AlertType"] hide">
                        @TempData["AlertMessage"]
                    </div>
                }
            </div>
            @using (Html.BeginForm()) 
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                <div class="login__info">
                    <div align="center" class="login__info login__info--username bg-module-middle wow animate__fadeinup" data-wow-duration="2s">
                        <label class="moudle__info--title">Mã đăng nhập</label>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "username-login form-control required display-inline-block", @placeholder = "Mời nhập tên đăng nhập", @autofocus = "autofocus" })

                    </div>
                    <div align="center" class="login__info login__info--password bg-module-middle wow animate__fadeinup" data-wow-duration="2s" style="position: relative;">

                        <label class="moudle__info--title">Mật khẩu</label>
                        @Html.TextBoxFor(model => model.PassWord, new { @class = "form-password-login form-control required display-inline-block", @id = "pwd", @placeholder = "Mời nhập mật khẩu", @type = "password" })
                        <button type="button" class="btn-show-password btn-show-password-login" onclick="showHide()" id="eye" style="position: absolute;outline: none; background: none; top: 17px; right:18.5vw;">
                            <img src="../../assets/client/image/eye.png" alt="eye" />
                        </button>
                    </div>
                </div>
                <div class="form-group row form-group--center wow animate__fadeInUp" data-wow-duration="2s" style="margin: 0">
                    <div class="col-lg-4 col-md-4 form-group">
                        <button type="submit" class="btn btn-danger" style="width: 100%">
                            <i class="fa fa-users"></i>&nbsp;Đăng nhập tài khoản
                        </button>
                    </div>
                    <div class="col-lg-4 col-md-4">
                        <a class="btn btn-info" style="width: 100%" href="@Url.Action("ForgotPassword","Home")"
                           target="_blank">
                            <i class="fa fa-key">
                            </i>&nbsp;Quên mật khẩu?
                        </a>
                    </div>

                </div>
            }


            <div>
                <div class="bg-module bg-module-bottom wow animate__fadeInUp" data-wow-duration="2s" colspan="2">
                    &nbsp;

                </div>
            </div>

        </div>
    </div>

    <div class="form-group mt-3">
        <div class="alert alert-danger login--note" style="width:100%;">
            <strong>Trường hợp không đăng nhập được?</strong>
            <br>
            <ul>
                <li>Nếu quên mật khẩu, nhấn nút quên mật khẩu để vào mail nhận mật khẩu;</li>
                <li>
                    Trường hợp vào mail không thấy, vào mục spam để kiểm tra. Tuy nhiên, những SV
                    chưa
                    cập nhật email thì sẽ không thấy mail gửi về -&gt; Liên hệ Ban Truyền thông để
                    xin
                    tài khoản;
                </li>
                <li>Từ năm học 2020-2021, tất cả SV sẽ sử dụng email do nhà trường cấp.</li>
            </ul>
        </div>
    </div>
    <hr>
</main>
<script>
    var x = true;
    function showHide() {
        if (x) {
            document.getElementById("pwd").type = "text";
            x = false;
        } else {
            document.getElementById("pwd").type = "password";
            x = true;
        }
    }
</script>



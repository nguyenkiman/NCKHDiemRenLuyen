@model IEnumerable<Models.EF.hocKi>
@{
    ViewBag.Title = "Học kỳ chưa có đánh giá điểm";
    Layout = "~/Views/Officers/_Layout.cshtml";
}

<main>

    <div id="crumbs" class="wow animate__fadeInUp" data-wow-duration="2s" style="visibility: visible;">
        <ul>
            <li><a href="index.php" class="breadcrumb">Trang chủ</a></li>
        </ul>
    </div>
    <div class="list__class_appraise mt-3 wow animate__fadeInUp" data-wow-duration="2s" style="visibility: visible;">
        <label class="list__class_appraise--title">Đợt đánh giá: </label>
        <select class="list__class_appraise--time">
            @foreach (var item in Model)
            {
                <option value="@item.maHocKi">Đợt đánh giá HK @item.maHocKi</option>
            }
        </select>
    </div>
    <div class="notify--form mt-3">
        <h1 class="article-title wow animate__fadeInUp" data-wow-duration="2s" itemprop="headline" style="text-align: center;text-transform: capitalize;">
            Học Kỳ Hiện Tại Chưa Có Đánh Giá Điểm
        </h1>
        <div class="notify_info d-flex mt-3">
            <div class="col-md-6 notify_info--image d-flex align-items-center justify-content-center wow animate__fadeInUp" data-wow-duration="1s">
                <img src="~/Assets/client/image/error_drl.jpg">
            </div>
            <div class="col-md-6 notify_info--content d-flex align-items-center">
                <div class=" d-flex flex-column" width="100%" align="center" border="0" cellpadding="0"
                     cellspacing="0">

                    <div class="notify_info--content--title wow animate__fadeInUp" data-wow-duration="2s">
                        <p>Sinh viên chưa chấm điểm cho học kì này</p>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <hr>
</main>

